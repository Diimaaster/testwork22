<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="25sp"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/start_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textSize="55sp"
        android:textColor="@color/white"
        android:lineHeight="50sp"
        android:textAlignment="center"
        android:text="MATCH THE TIME ZONE WITH THE CITY"
        android:layout_marginTop="390sp"/>

    <LinearLayout
        android:id="@+id/time_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginTop="300sp"
        android:layout_marginStart="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/time" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Москва"
                android:textSize="20dp"/>

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/time1" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Париж"
                android:textSize="20dp"/>

         </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/time2" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Лондон"
                android:textSize="20dp"/>

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/time3" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Сидней"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/time4" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Токио"
                android:textSize="20dp"/>

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/time5" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Пекин"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/answ_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="260sp"
        android:layout_marginStart="130dp"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/answ_text"
        android:layout_width="388dp"
        android:layout_height="65dp"
        android:hint="УКАЖИ ОТВЕТ"
        android:visibility="gone"
        android:layout_marginTop="45sp"
        android:background="@drawable/rounded"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:textColorHint="#DCDCDC"
        android:textColor="#DCDCDC"
        android:gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:elevation="4dp"
        android:shadowRadius="50"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok"
        android:textSize="30sp"
        android:lineHeight="30px"
        android:textColor="@color/white"
        android:letterSpacing="0"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30sp"
        android:background="@drawable/button"
        android:fontFamily="@font/roboto_medium"
        android:text="OK" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/restart"
        android:textSize="30sp"
        android:lineHeight="30px"
        android:textColor="@color/white"
        android:letterSpacing="0"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30sp"
        android:background="@drawable/button"
        android:fontFamily="@font/roboto_medium"
        android:text="RESTART" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start"
        android:textSize="30sp"
        android:lineHeight="30px"
        android:textColor="@color/white"
        android:letterSpacing="0"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30sp"
        android:background="@drawable/button"
        android:fontFamily="@font/roboto_medium"
        android:text="PLAY" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ready"
        android:textSize="30sp"
        android:lineHeight="30px"
        android:textColor="@color/white"
        android:letterSpacing="0"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_margin="30sp"
        android:background="@drawable/button"
        android:fontFamily="@font/roboto_medium"
        android:text="READY" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/casual"
        android:textSize="30sp"
        android:visibility="gone"
        android:lineHeight="30px"
        android:textColor="@color/white"
        android:letterSpacing="0"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30sp"
        android:background="@drawable/button"
        android:fontFamily="@font/roboto_medium"
        android:text="CASUAL" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/time_bt"
        android:textSize="30sp"
        android:lineHeight="30px"
        android:textColor="@color/white"
        android:letterSpacing="0"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:background="@drawable/button"
        android:fontFamily="@font/roboto_medium"
        android:visibility="gone"
        android:text="Play for time" />


</LinearLayout>